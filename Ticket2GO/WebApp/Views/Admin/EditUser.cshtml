@model WebApp.ViewModels.ManageUserRolesViewModel

@{
    ViewData["Title"] = "Промени Потребител";
}
<h2>Промени потребител</h2>

<form asp-action="EditUser" method="post">
    <input type="hidden" asp-for="UserId" />
    <div class="form-group">
        <label asp-for="Email">Електронна Поща</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="FirstName">Първо Име</label>
        <input asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LastName">Фамилия</label>
        <input asp-for="LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password">Парола</label>
        <input asp-for="Password" class="form-control" />
    </div>
    <div class="form-group">
        <label>Роли</label>
        @foreach (var role in Model.AvailableRoles)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="SelectedRoles" value="@role" @(Model.Roles.Contains(role) ? "checked" : "") />
                <label class="form-check-label">@role</label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Запази</button>
</form>