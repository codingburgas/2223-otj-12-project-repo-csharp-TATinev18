@model List<WebApp.ViewModels.ManageUserRolesViewModel>

@{
    ViewData["Title"] = "Manage Users";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>
                    <ul>
                        @foreach (var role in user.Roles)
                        {
                            <li>@role</li>
                        }
                    </ul>
                </td>
                <td>
                    <a asp-action="EditUser" asp-route-userId="@user.UserId" class="btn btn-primary">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
