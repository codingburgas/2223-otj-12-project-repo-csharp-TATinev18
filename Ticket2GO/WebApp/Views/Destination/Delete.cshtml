@using System.Globalization
@model WebApp.Models.Destination

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <h1 class="my-4">Delete</h1>

    <div class="card">
        <div class="card-header">
            <h4>Are you sure you want to delete this destination?</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">
                    Starting Destination
                </dt>
                <dd class="col-sm-8">
                    @Model.StartingDestination
                </dd>
                <dt class="col-sm-4">
                    Final Destination
                </dt>
                <dd class="col-sm-8">
                    @Model.FinalDestination
                </dd>
                <dt class="col-sm-4">
                    Duration
                </dt>
                <dd class="col-sm-8">
                    @Model.Duration
                </dd>
                <dt class="col-sm-4">
                    Departure
                </dt>
                <dd class="col-sm-8">
                    @Model.Departure
                </dd>
                <dt class="col-sm-4">
                    Time Of Arrival
                </dt>
                <dd class="col-sm-8">
                    @Model.TimeOfArrival
                </dd>
                <dt class="col-sm-4">
                    Bus
                </dt>
                <dd class="col-sm-8">
                    @Model.Bus.Name
                </dd>
                <dt class="col-sm-4">
                    Price
                </dt>
                <dd class="col-sm-8">
                    @Model.Price.ToString("C", CultureInfo.CurrentCulture)
                </dd>
            </dl>
        </div>
    </div>

    <form method="post" class="mt-4">
        <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" id="DeleteAllRepetitions" name="deleteAllRepetitions" value="true" @(ViewBag.DeleteAllRepetitions ? "checked" : "") />
            <label class="form-check-label" for="DeleteAllRepetitions">Delete all repeated destinations</label>
        </div>
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>