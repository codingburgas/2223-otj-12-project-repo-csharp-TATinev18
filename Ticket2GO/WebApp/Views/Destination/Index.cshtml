@using System.Globalization
@model IEnumerable<WebApp.Models.Destination>
@{
    ViewData["Title"] = "Маршрути";
}

<h1>Маршрути</h1>

<p>
    <a asp-action="SelectCompany" asp-controller="Destination" class="btn btn-primary">Създаване на маршрут</a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Начална дестинация</th>
                <th>Крайна дестинация</th>
                <th>Продължителност</th>
                <th>Дата на заминаване</th>
                <th>Дата на пристигане</th>
                <th>Автобус</th>
                <th>Автобусна компания</th>
                <th>Цена</th>
                <th>Опции</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.StartingDestination</td>
                    <td>@item.FinalDestination</td>
                    <td>@item.Duration</td>
                    <td>@item.Departure</td>
                    <td>@item.TimeOfArrival</td>
                    <td>@item.Bus.Name</td>
                    <td>@item.Bus.TransportCompany.Name</td>
                    <td>@item.Price.ToString("C", CultureInfo.CurrentCulture)</td>
                    <td>
                        <a asp-action="Details" asp-controller="Destination" asp-route-id="@item.DestinationId" class="btn btn-sm btn-info">Детайли</a>
                        <a asp-action="Delete" asp-controller="Destination" asp-route-id="@item.DestinationId" class="btn btn-sm btn-danger">Изтрий</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
