@using System.Globalization
@model IEnumerable<WebApp.Models.Destination>
@{
    ViewData["Title"] = "Destinations";
}

<h1>Destinations</h1>

<p>
    <a asp-action="SelectCompany" asp-controller="Destination" class="btn btn-primary">Create New</a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Starting Destination</th>
                <th>Final Destination</th>
                <th>Duration</th>
                <th>Departure</th>
                <th>Time of Arrival</th>
                <th>Bus Name</th>
                <th>Transport Company</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.StartingDestination</td>
                    <td>@item.FinalDestination</td>
                    <td>@item.Duration</td>
                    <td>@item.Departure</td>
                    <td>@item.TimeOfArrival</td>
                    <td>@item.Bus.Name</td>
                    <td>@item.Bus.TransportCompany.Name</td>
                    <td>@item.Price.ToString("C", CultureInfo.CurrentCulture)</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Destination" asp-route-id="@item.DestinationId" class="btn btn-sm btn-secondary">Edit</a>
                        <a asp-action="Details" asp-controller="Destination" asp-route-id="@item.DestinationId" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Delete" asp-controller="Destination" asp-route-id="@item.DestinationId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
