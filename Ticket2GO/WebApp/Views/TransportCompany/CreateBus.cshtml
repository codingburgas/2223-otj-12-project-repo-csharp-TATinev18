@model WebApp.ViewModels.CreateBusViewModel
@{
    ViewData["Title"] = "Добавяне на автобуси";
    ViewData["TransportCompanyId"] = ViewBag.TransportCompanyId;
}

<h1>Добавете автобус</h1>
<form asp-action="CreateBus" asp-route-transportCompanyId="@ViewData["TransportCompanyId"]" method="post">
    <input type="hidden" asp-for="TransportCompanyId" value="@ViewData["TransportCompanyId"]" />
    <div class="form-group">
        <label asp-for="Name" class="control-label">Име</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SeatsNumber" class="control-label">Брой места</label>
        <input asp-for="SeatsNumber" class="form-control" />
        <span asp-validation-for="SeatsNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Добави" class="btn btn-primary"/>
    </div>
</form>

<div>
    <a asp-action="Buses" asp-route-transportCompanyId="@ViewData["TransportCompanyId"]">Назад</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
