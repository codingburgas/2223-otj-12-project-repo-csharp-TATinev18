@model TransportCompany

@{
    ViewData["Title"] = "Информация за компанията";
}

<h1>Информация за компанията</h1>

<dl class="row">
    <dt class="col-sm-2">
        Име
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Name)
    </dd>
    <dt class="col-sm-2">
        Лого
    </dt>
    <dd class="col-sm-10">
        <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Logo)" alt="@Model.Name Logo" width="100" height="100" />
    </dd>
    <dt class="col-sm-2">
        Дата на създаване
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.DateCreated)
    </dd>
    <dt class="col-sm-2">
        Последни промени
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.DateEdited)
    </dd>
</dl>

<div>
    <a asp-action="Edit" asp-route-id="@Model.TransportCompanyId" class="btn btn-secondary">Редактирай</a>
    <a asp-action="Index" class="btn btn-info">Назад</a>
</div>