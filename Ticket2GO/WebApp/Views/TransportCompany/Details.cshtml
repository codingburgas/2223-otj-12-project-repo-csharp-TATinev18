@model TransportCompany

@{
    ViewData["Title"] = "Transport Company Details";
}

<h1>Transport Company Details</h1>

<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Name)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Name)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Logo)
    </dt>
    <dd class="col-sm-10">
        <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Logo)" alt="@Model.Name Logo" width="100" height="100" />
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.DateCreated)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.DateCreated)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.DateEdited)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.DateEdited)
    </dd>
</dl>

<div>
    <a asp-action="Edit" asp-route-id="@Model.TransportCompanyId" class="btn btn-secondary">Edit</a>
    <a asp-action="Index" class="btn btn-info">Back to List</a>
</div>