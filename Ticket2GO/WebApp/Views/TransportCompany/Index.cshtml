@model IEnumerable<WebApp.Models.TransportCompany>

@{
    ViewData["Title"] = "Transport Companies";
}

<h1>Transport Companies</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Logo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        <img src="data:image/png;base64,@Convert.ToBase64String(item.Logo)" alt="@item.Name Logo" style="width: 100px; height: auto;" />
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.TransportCompanyId" class="btn btn-sm btn-secondary">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.TransportCompanyId" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.TransportCompanyId" class="btn btn-sm btn-danger">Delete</a>
                        <a asp-action="Buses" asp-route-transportCompanyId="@item.TransportCompanyId">Buses</a> |
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
