@model IEnumerable<WebApp.Models.TransportCompany>

@{
    ViewData["Title"] = "My Transport Companies";
}

<h1>My Transport Companies</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Transport Company</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Logo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.Logo)" alt="@item.Name Logo" width="100" height="100" />
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TransportCompanyId" class="btn btn-secondary">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.TransportCompanyId" class="btn btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.TransportCompanyId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
